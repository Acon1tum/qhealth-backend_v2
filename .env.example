# =============================================================================
# QHEALTH BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
TRUST_PROXY=false

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
# Generate strong, unique secrets for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=2h

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/qhealth_db"

# =============================================================================
# CORS SECURITY CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for production
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true
ENABLE_SECURITY_LOG=true
LOG_TO_FILE=false
LOG_DIR=./logs

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# These are already configured in security.config.ts
# Override if needed for specific environments
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100

# =============================================================================
# PASSWORD POLICY CONFIGURATION
# =============================================================================
# These are already configured in security.config.ts
# Override if needed for specific environments
# PASSWORD_MIN_LENGTH=8
# PASSWORD_SALT_ROUNDS=12

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# These are already configured in security.config.ts
# Override if needed for specific environments
# SESSION_INACTIVITY_TIMEOUT=1800000
# SESSION_MAX_CONCURRENT=5

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# These are already configured in security.config.ts
# Override if needed for specific environments
# FILE_MAX_SIZE=10485760
# FILE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# SECURITY HEADERS CONFIGURATION
# =============================================================================
# These are already configured in security.config.ts
# Override if needed for specific environments
# HSTS_MAX_AGE=31536000
# HSTS_INCLUDE_SUBDOMAINS=true
# HSTS_PRELOAD=true

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
# Enable/disable security monitoring features
ENABLE_SECURITY_MONITORING=true
ENABLE_RATE_LIMIT_ALERTS=true
ENABLE_AUTH_FAILURE_ALERTS=true

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Only use these in development environment
# DEBUG=true
# SHOW_STACK_TRACES=true
# LOG_REQUESTS=true

# =============================================================================
# PRODUCTION SECURITY NOTES
# =============================================================================
# 1. Change all default secrets
# 2. Use HTTPS in production
# 3. Set TRUST_PROXY=true if behind load balancer
# 4. Restrict ALLOWED_ORIGINS to production domains only
# 5. Enable file logging for audit trails
# 6. Set appropriate log levels for production
# 7. Configure proper database connection pooling
# 8. Enable monitoring and alerting
# 9. Regular security audits and updates
# 10. Backup and disaster recovery procedures
